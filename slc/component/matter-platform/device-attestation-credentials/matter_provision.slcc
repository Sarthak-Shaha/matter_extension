id: matter_provision
label: Attestation Certificate provisioning configuration
description: Configuration of the Attestation Certificate provisioning. Set ENABLE_EXAMPLE_CREDENTIALS in this component's configuration to select certificate provisioning options.
package: "Matter"
category: Platform|Security
quality: production
metadata:
  sbom:
    license: Zlib
provides:
  - name: matter_provision

config_file:
  - path: slc/config/sl_matter_provision_config.h
    file_id: matter_provision_config
    
include:
- path: third_party/matter_sdk/examples/platform/silabs/provision
  file_list:
  - path: AttestationKey.h
  - path: ProvisionChannel.h
  - path: ProvisionEncoder.h
  - path: ProvisionManager.h
  - path: ProvisionProtocol.h
  - path: ProvisionStorage.h
  - path: ProvisionStorageGeneric.h
- path: third_party/matter_sdk/examples/platform/silabs
  file_list:
  - path: SilabsTestEventTriggerDelegate.h
- path: third_party/matter_sdk/src
  file_list:
  - path: platform/silabs/multi-ota/OtaTlvEncryptionKey.h

requires:
  - name: iostream
  - name: iostream_rtt

source:
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionEncoder.cpp
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionManager.cpp
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionProtocolV1.cpp
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionProtocolV2.cpp
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionStorage.cpp
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionStorageCustom.cpp
  
  - path: third_party/matter_sdk/examples/platform/silabs/provision/AttestationKeyPSA.cpp
    condition: [matter_platform_efr32]
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionChannelEFR32BLE.cpp
    condition: [matter_ble]
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionStorageDefault.cpp
    condition: [matter_platform_efr32]

  - path: third_party/matter_sdk/examples/platform/silabs/provision/AttestationKeyMbed.cpp
    condition: [matter_platform_siwx917]
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionChannelSi917BLE.cpp
    condition: [matter_wifi_ble]
  - path: third_party/matter_sdk/examples/platform/silabs/provision/ProvisionStorageFlash.cpp
    condition: [matter_platform_siwx917]